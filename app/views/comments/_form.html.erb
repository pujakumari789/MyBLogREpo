<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <%= comment.comment %>
    <a href="#">reply</a>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_field :comment %>
  </p>
  <%= form.hidden_field:user_id,value: current_user.id %>
  <p>
    <%= form.submit %>
  </p>
<% end %>

